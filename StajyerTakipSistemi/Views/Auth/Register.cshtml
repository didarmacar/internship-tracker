@using StajyerTakipSistemi.Models.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Stajyer Takip Sistemi - Kayıt</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f8fffe 0%, #e8f5e8 30%, #c8e6c9 100%);
            min-height: 100vh;
            overflow: hidden;
            position: relative;
        }

        /* Animated background particles */
        .bg-animation {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 0;
        }

        .particle {
            position: absolute;
            background: radial-gradient(circle, rgba(46, 125, 50, 0.3), rgba(27, 94, 32, 0.1));
            border-radius: 50%;
            animation: floatAndFade 8s ease-in-out infinite;
        }

            .particle:nth-child(1) {
                width: 100px;
                height: 100px;
                left: 15%;
                top: 20%;
                animation-delay: 0s;
            }

            .particle:nth-child(2) {
                width: 80px;
                height: 80px;
                left: 75%;
                top: 60%;
                animation-delay: 3s;
            }

            .particle:nth-child(3) {
                width: 120px;
                height: 120px;
                left: 85%;
                top: 10%;
                animation-delay: 6s;
            }

            .particle:nth-child(4) {
                width: 90px;
                height: 90px;
                left: 5%;
                top: 70%;
                animation-delay: 2s;
            }

            .particle:nth-child(5) {
                width: 70px;
                height: 70px;
                left: 45%;
                top: 15%;
                animation-delay: 4s;
            }

        @@keyframes floatAndFade {
            0%

        {
            opacity: 0;
            transform: translateY(20px) scale(0.8);
        }

        25% {
            opacity: 0.4;
            transform: translateY(-10px) scale(1);
        }

        50% {
            opacity: 0.6;
            transform: translateY(-20px) scale(1.1);
        }

        75% {
            opacity: 0.3;
            transform: translateY(-15px) scale(0.9);
        }

        100% {
            opacity: 0;
            transform: translateY(10px) scale(0.7);
        }

        }

        .main-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            position: relative;
            z-index: 1;
            padding: 40px;
        }

        /* Kayıt kartı - başlangıçta küçük, sonra büyüyecek */
        .register-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 35px 30px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 15px 35px rgba(76, 175, 80, 0.15);
            border: 1px solid rgba(76, 175, 80, 0.2);
            position: relative;
            transition: all 0.4s ease;
            overflow: hidden;
            animation: cardExpand 1.2s ease-out forwards;
        }

        /* Kartın büyüme animasyonu - yumuşak ve yavaş */
        @@keyframes cardExpand {
            0%

        {
            transform: scale(0.4) translateX(-40%);
            opacity: 0;
            max-width: 350px;
        }

        50% {
            opacity: 0.7;
        }

        100% {
            transform: scale(1) translateX(0);
            opacity: 1;
            max-width: 530px;
        }

        }

        

        .register-card:hover::before {
            opacity: 0.8;
        }

        .register-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1); /* Sadece gri shadow */
            background: rgba(255, 255, 255, 0.95);
        }

        @@keyframes gradientShift {
            0%, 100%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        }

        .register-title {
            text-align: center;
            color: #1b5e20;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .register-subtitle {
            text-align: center;
            color: #666;
            font-size: 16px;
            margin-bottom: 35px;
            font-weight: 400;
        }
               
           
            

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                color: #333;
                font-weight: 600;
                font-size: 14px;
            }

        .required {
            color: #e74c3c;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            font-size: 16px;
            transition: all 0.3s ease;
            outline: none;
            background: #fafafa;
        }

            .form-control:focus {
                border-color: #4caf50;
                background: white;
                box-shadow: 0 0 0 4px rgba(76, 175, 80, 0.1);
            }

        .btn-register {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #4caf50, #2e7d32);
            border: none;
            border-radius: 12px;
            color: white;
            font-weight: 700;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            margin-top: 10px;
        }

            .btn-register::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
                transition: left 0.5s;
            }

            .btn-register:hover::before {
                left: 100%;
            }

            .btn-register:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(76, 175, 80, 0.3);
            }

        .login-link {
            text-align: center;
            margin-top: 25px;
        }

            .login-link a {
                color: #4caf50;
                text-decoration: none;
                font-weight: 600;
                transition: all 0.3s ease;
                cursor: pointer;
            }

                .login-link a:hover {
                    color: #2e7d32;
                    text-shadow: 0 0 10px rgba(76, 175, 80, 0.3);
                }

        .alert {
            padding: 15px;
            margin-bottom: 25px;
            border-radius: 12px;
            animation: slideIn 0.5s ease-out;
        }

        .alert-success {
            background: linear-gradient(135deg, #d4edda, #c3e6cb);
            color: #155724;
            border: 1px solid #4caf50;
        }

        .alert-danger {
            background: linear-gradient(135deg, #ffebee, #ffcdd2);
            color: #c62828;
            border: 1px solid #ef5350;
        }

        .validation-summary {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

            .validation-summary ul {
                margin: 0;
                padding-left: 20px;
            }

        .text-danger {
            color: #e74c3c;
            font-size: 12px;
            margin-top: 5px;
            display: block;
        }

        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Responsive */
        @@media (max-width: 768px) {
            .main-container

        {
            padding: 20px;
        }

        .register-card {
            padding: 30px 25px;
            max-width: 100%;
        }

        .register-title {
            font-size: 28px;
        }

        @@keyframes cardExpand {
            0%

        {
            transform: scale(0.6) translateY(-10%);
            opacity: 0;
        }

        50% {
            opacity: 0.7;
        }

        100% {
            transform: scale(1) translateY(0);
            opacity: 1;
        }

        }
        }

        /* Sayfa geçiş animasyonu için */
        .page-transition {
            animation: pageLoad 0.6s ease-out forwards;
        }

        @@keyframes pageLoad {
            0%

        {
            opacity: 0;
            transform: scale(0.95);
        }

        100% {
            opacity: 1;
            transform: scale(1);
        }

        }

        /* Animasyon stilleri */
        @@keyframes cardShrink {
            0%

        {
            transform: scale(1) translateX(0);
            opacity: 1;
        }

        50% {
            opacity: 0.5;
        }

        100% {
            transform: scale(0.4) translateX(-120%);
            opacity: 0;
        }

        }
    </style>
</head>
<body class="page-transition">
    <!-- Animated background -->
    <div class="bg-animation">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>

    <div class="main-container">
        <!-- Kayıt kartı -->
        <div class="register-card">
            <h2 class="register-title">Aramıza Katılın</h2>
            <p class="register-subtitle">Yeni hesap oluşturun</p>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Register" method="post">
                
                <div class="form-group">
                    <label asp-for="AdSoyad">Ad Soyad <span class="required">*</span></label>
                    <input asp-for="AdSoyad" type="text" class="form-control" placeholder="Adınızı ve soyadınızı giriniz" />
                    <span asp-validation-for="AdSoyad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">E-posta Adresi <span class="required">*</span></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Sifre">Şifre <span class="required">*</span></label>
                    <input asp-for="Sifre" type="password" class="form-control" placeholder="En az 6 karakter" />
                    <span asp-validation-for="Sifre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SifreTekrar">Şifre Tekrar <span class="required">*</span></label>
                    <input asp-for="SifreTekrar" type="password" class="form-control" placeholder="Şifrenizi tekrar giriniz" />
                    <span asp-validation-for="SifreTekrar" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-register">KAYIT OL</button>
            </form>

            <div class="login-link">
                <a onclick="goToLogin()">Zaten hesabınız var mı? Giriş yapın</a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Form submit animasyonu
        document.querySelector('form').addEventListener('submit', function(e) {
            const btn = document.querySelector('.btn-register');
            btn.style.transform = 'scale(0.95)';
            btn.innerHTML = 'Kayıt oluşturuluyor...';

            setTimeout(() => {
                btn.style.transform = 'scale(1)';
            }, 200);
        });

                // Giriş sayfasına geçiş fonksiyonu
        function goToLogin() {
            // Direkt giriş sayfasına git
            window.location.href = '@Url.Action("Login", "Auth")';
        }

        // Sayfa yüklendiğinde animasyon
        window.addEventListener('load', function() {
            document.body.classList.add('page-transition');
        });
    </script>
</body>
</html>